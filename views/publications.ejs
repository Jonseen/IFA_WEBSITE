<div class="publications-div container">
    <h1>Publications</h1>

    <div class="publications">

        <% docData.reverse().forEach(doc => { %>
         
            <div class="publication">
                <% if (doc && doc.thumbnail && doc.thumbnail.length> 0) { %>
                        <img src="/documents/<%= doc.thumbnail %>" alt="Thumbnail">
                            <% } else { %>
                                <p>No thumbnail available.</p>
                                <% } %>
                <h4><%= doc.title %></h4>
                <a href="/documents/<%= doc.documentDoc %>" target="_blank">Download</a>
            </div>
        <% }) %>

    </div>
</div>

<!-- Google Translate Widget Code -->

<script type="text/javascript">
    function googleTranslateElementInit() {
        new google.translate.TranslateElement({
            pageLanguage: 'en',
            includedLanguages: 'en,fr,yo,ig,ha'
        }, 'google_translate_element');
    }


    function toggleTheme() {
        document.documentElement.classList.toggle('dark-theme');
    }

    // Image slider 
    let currentSlide = 0;
    const slides = document.querySelectorAll('.slide');
    const totalSlides = slides.length;

    function showSlide(index) {
        currentSlide = (index + totalSlides) % totalSlides;
        document.querySelector('.slider').style.transform = `translateX(${-currentSlide * 100}%)`;
    }

    function moveSlide(n) {
        showSlide(currentSlide + n);
    }

    // Auto-slide (Optional)
    setInterval(() => moveSlide(1), 3000);
</script>

<script type="text/javascript"
    src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>