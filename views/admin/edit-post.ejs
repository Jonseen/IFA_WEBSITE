<a href="/admin/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>View / Edit Post</h2><br>

    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn-delete btn">
    </form>
</div><br>

<div>
    <% if (data && data.images && data.images.length > 0) { %>
        <% data.images.forEach(function(image) { %>
          <img src="/uploads/<%= image %>" alt="Image" style="width:180px; height:200px; margin: 10px;">
        <% }) %>
      <% } else { %>
        <p>No images available.</p>
      <% } %>      
</div><br><br>
<form action="/admin/edit-post/<%= data._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <label for="title"><b>Title</b></label><br>
    <input type="text" name="title" id="" placeholder="Post Title" value="<%= data.title %>"><br><br>

    <label for="title"><b>Pictures</b></label><br>
    <input type="file" name="files" id="" multiple><br><br>

    <label for="body"><b>Content</b></label><br>
    <textarea name="body" id="richtext" cols="50" rows="10"><%= data.body %></textarea><br><br>

    <input type="submit" value="Update" class="btn">
</form>